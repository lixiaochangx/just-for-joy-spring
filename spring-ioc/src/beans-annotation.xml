<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<!-- 指定SpringIOC容器扫描的包 -->
	<!-- 可以通过resource-pattern指定扫描的资源 -->
	<!-- <context:component-scan base-package="com.xc.justforjoy.beans.annotation"
	resource-pattern="repository/*.class"></context:component-scan> -->

	<context:component-scan base-package="com.xc.justforjoy.beans.annotation"
	></context:component-scan>
	
	<!-- <context:exclude-filter>:子节点指定排除哪些指定的表达式的组件；
		 <context:include-filter>:子节点指定包含哪些表达式的组件，该子节点 需要
		 use-default-filters属性配合使用。
	 -->
	<context:component-scan base-package="com.xc.justforjoy.beans.annotation"
		use-default-filters="false">
		
		<!--<context:exclude-filter type="annotation"
		expression="org.springframework.stereotype.Repository"/>-->
		<!-- 跟use-default-filters有关 -->
		<!-- <context:include-filter type="annotation" 
		expression="org.springframework.stereotype.Repository"/> -->
	 	
	 	<!-- 默认：use-default-filters="true" -->
	 	 <!--<context:exclude-filter type="annotation"
	 		expression="com.xc.justforjoy.beans.annotation.repository.UserRepository"/>-->

	 	 <!-- use-default-filters="false" -->
	 	  <!--<context:include-filter type="annotation"
	 	 expression="com.xc.justforjoy.beans.annotation.repository.UserRepository"/>-->
	</context:component-scan>
	

</beans>
